{
  "definitions": [
    {
      "title": "Adaptive Form",
      "id": "form",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "fd/franklin/components/form/v1/form",
            "template": {
              "fieldType": "form",
              "fd:version": "2.1"
            }
          }
        }
      }
    },
    {
      "...": "./models/form-components/_*.json#/definitions"
    },
    { 
      "...": "./components/accordion/_accordion.json#/definitions" 
    },
    { 
      "...": "./components/modal/_modal.json#/definitions" 
    },
    { 
      "...": "./components/password/_password.json#/definitions" 
    },
    { 
      "...": "./components/rating/_rating.json#/definitions" 
    },
    { 
      "...": "./components/tnc/_tnc.json#/definitions" 
    },
    { 
      "...": "./components/wizard/_wizard.json#/definitions" 
    }
  ],
  "models": [
    {
      "id": "form",
      "fields": [
          {
              "component": "select",
              "name": "thankYouOption",
              "label": "On Submit",
              "valueType": "string",
              "readOnly": true,
              "options": [
                  {
                      "name": "Show message",
                      "value": "message"
                  },
                  {
                    "name": "Redirect to URL",
                    "value": "page"
                  }
              ]
          },
          {
              "component": "richtext",
              "name": "thankYouMessage",
              "label": "Message Content",
              "valueType": "string",
              "condition": { "==": [{ "var": "thankYouOption" }, "message"] }
          },
          {
            "component": "text",
            "name": "redirect",
            "label": "Redirect to URL",
            "valueType": "string",
            "condition": { "==": [{ "var": "thankYouOption" }, "page"] }
        },
          {
              "component": "select",
              "valueType": "string",
              "name": "actionType",
              "label": "Submit Action",
              "options": [
                  {
                    "name": "Send email",
                    "value": "fd/af/components/guidesubmittype/email"
                  },
                  {
                    "name": "Invoke a Power Automate flow",
                    "value": "fd/powerautomate/components/actions/pasubmit"
                  },
                  {
                    "name": "Submit to SharePoint",
                    "value": "fd/afaddon/components/actions/sharepointstorage"
                  },
                  {
                    "name": "Invoke a Workfront Fusion scenario",
                    "value": "fd/workfrontfusion/components/actions/wfsubmit"
                  },
                  {
                    "name": "Submit using Form Data Model",
                    "value": "fd/afaddon/components/actions/fdm"
                  },
                  {
                    "name": "Submit to Azure Blob Storage",
                    "value": "fd/afaddon/components/actions/azureblobstorage"
                  },
                  {
                      "name": "Submit to REST endpoint",
                      "value": "fd/af/components/guidesubmittype/restendpoint"
                  },
                  {
                      "name": "Persist to Spreadsheet",
                      "value": "spreadsheet"
                  }
              ],
              "value" : "",
              "description": "To view the complete list of configurations, or to edit the Submit Action and Thank You options, go to Edit Form Properties."
          }
      ]
    },
    {
      "...": "./models/form-components/_*.json#/models"
    },
    {
      "...": "./components/*/_*.json#/models"
    }
  ],
  "filters": [
    {
      "id": "form",
      "components": [
        "captcha",
        "checkbox",
        "checkbox-group",
        "date-input",
        "drop-down",
        "email",
        "file-input",
        "form-accordion",
        "form-button",
        "form-fragment",
        "form-image",
        "form-modal",
        "form-reset-button",
        "form-submit-button",
        "number-input",
        "panel",
        "password",
        "plain-text",
        "radio-group",
        "rating",
        "telephone-input",
        "text-input",
        "tnc",
        "wizard",
        "range"
      ]
    }
  ]
}
